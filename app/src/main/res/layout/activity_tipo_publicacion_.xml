<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tipo_publicacion_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/gradientamarillo2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Escoja su tipo de publicacion."
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/gradientamarillo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/buscarCasa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="42dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="24dp"
            android:background="#99ffffff"
            android:drawableTop="@drawable/ic_buscar_casa_iconr_foreground"
            android:text="Buscar inmueble."
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/gradientamarillo2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ofertarCasa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="42dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="24dp"
            android:background="#99ffffff"
            android:drawableTop="@drawable/ic_ofertar_casa_icon_foreground"
            android:text="Ofertar inmueble."
            android:textAlignment="center"

            android:textColor="#000"
            android:textSize="12dp" />

    </LinearLayout>
</LinearLayout>